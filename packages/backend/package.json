    "react": "catalog:",
    "server-only": "catalog:",
    "zod": "catalog:",
    "@repo/lib": "workspace:*"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "^8.10.9",
    "@types/react": "catalog:",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.9",
    "next": "catalog:",
    "typescript": "catalog:"
  }
