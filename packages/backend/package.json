{
  "name": "@repo/backend",
  "version": "0.0.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "dev": "npm run build",
    "build": "node -e \"console.log('backend build skipped: configure Drizzle for DB access')\"",
    "db:generate": "bun run drizzle:generate",
