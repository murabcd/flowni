{
  "name": "portal",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently -n \"Turbo\" \"turbo run dev --env-mode=loose --\"",
    "dev:full": "concurrently -n \"Turbo,Supabase\" \"turbo run dev --env-mode=loose --\" \"npx supabase start\"",
    "check": "ultracite check && manypkg check",
    "fix": "ultracite fix",
    "type-check": "turbo run type-check",
    "analyze": "turbo run analyze",
    "migrate": "cd packages/backend && bun run drizzle:push",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker,@tiptap/*,prosemirror-*,@tiptap-pro/*,@excalidraw/excalidraw,novel && bun install",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design-system && npx shadcn@latest migrate radix -c packages/design-system"
  },
